{
    "app-id": "com.github.themix_project.Oomox",
    "runtime": "org.gnome.Sdk",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "oomox-gui",
    "finish-args": [
        "--share=ipc",
        "--filesystem=~/.themes:create",
        "--filesystem=~/.icons:create",
        "--socket=x11"
    ],
    "modules": [
        {
            "name": "rust",
            "buildsystem": "simple",
            "cleanup": [
                "/share/doc/rust/html"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": ["i386"],
                    "url": "https://static.rust-lang.org/dist/rust-1.31.1-i686-unknown-linux-gnu.tar.gz",
                    "sha256": "1e77e5e8c745320faad9ce6f319a77b4a2e75d972eb68a195acd081ad910ab6d"
                },
                {
                    "type": "archive",
                    "only-arches": ["arm"],
                    "url": "https://static.rust-lang.org/dist/rust-1.31.1-arm-unknown-linux-gnueabihf.tar.gz",
                    "sha256": "09df9b5fe104df0fa6d115dea366002066654cf06aedcfa9da4869ccba56d575"
                },
                {
                    "type": "archive",
                    "only-arches": ["aarch64"],
                    "url": "https://static.rust-lang.org/dist/rust-1.31.1-aarch64-unknown-linux-gnu.tar.gz",
                    "sha256": "29a7c6eb536fefd0ca459e48dfaea006aa8bff8a87aa82a9b7d483487033632a"
                },
                {
                    "type": "archive",
                    "only-arches": ["x86_64"],
                    "url": "https://static.rust-lang.org/dist/rust-1.31.1-x86_64-unknown-linux-gnu.tar.gz",
                    "sha256": "a64685535d0c457f49a8712a096a5c21564cd66fd2f7da739487f028192ebe3c"
                }
            ],
            "build-commands": [
                "./install.sh --help",
                "./install.sh --list-components --verbose",
                "./install.sh --prefix=${FLATPAK_DEST} --disable-ldconfig --verbose"
            ]
        },
        {
            "name": "resvg",
            "buildsystem": "simple",
            "build-commands": [
                "cd ./deps/resvg ; for dir in capi tools/rendersvg; do ( cd $dir ; cargo build --release --features='qt-backend cairo-backend' ) done",
                "install -Dm755 ./deps/resvg/target/release/rendersvg /app/bin/rendersvg",
                "install -Dm755 ./deps/resvg/target/release/libresvg.so /app/lib/libresvg.so",
                "install -Dm644 ./deps/resvg/capi/include/resvg.h /app/include/resvg.h"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/RazrFalcon/resvg/archive/07b5191683f18be693a08f66334568f098ea5429.tar.gz",
                    "sha256": "2307c58c10b2adda2b990d2dcf676e2b4958798445dd700dc7225164092a5fc5",
                    "dest": "./deps/resvg"
                }
            ]
        },
        {
            "name": "python3-pillow",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "i386": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    }
                }
            },
            "build-commands": [
                "install -d ${FLATPAK_DEST}/lib/python3.5/site-packages/",
                "python3 setup.py install --prefix=${FLATPAK_DEST}"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/d3/c4/b45b9c0d549f482dd072055e2d3ced88f3b977f7b87c7a990228b20e7da1/Pillow-5.2.0.tar.gz",
                    "sha256": "f8b3d413c5a8f84b12cd4c5df1d8e211777c9852c6be3ee9c094b626644d3eab"
                }
            ]
        },
        {
            "name": "python3-colorthief",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "i386": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    }
                }
            },
            "build-commands": [
                "install -d ${FLATPAK_DEST}/lib/python3.5/site-packages/",
                "python3 setup.py install --root=${FLATPAK_DEST} --optimize=1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/fengsp/color-thief-py/archive/0.2.1.tar.gz",
                    "sha256": "f2c47cad43809048adb9be1e4e63519d32e3b68532e8f0ab7bf46a58ddf7d099"
                }
            ]
        },
        {
            "name": "python3-haishoku",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "i386": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    }
                }
            },
            "build-commands": [
                "install -d ${FLATPAK_DEST}/lib/python3.5/site-packages/",
                "python3 setup.py install --root=${FLATPAK_DEST}"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LanceGin/haishoku/archive/v1.1.7.tar.gz",
                    "sha256": "4f34043f5509e18b60411050b40596f9510193ae8dca5146f7e82cc0730536b8"
                }
            ]
        },
        {
            "name": "sassc",
            "buildsystem": "simple",
            "build-commands": [
                "cd ./deps/libsass ; autoreconf -i ; ./configure --prefix=/app ; make ; make DESTDIR=/ install",
                "cd ./deps/sassc ; autoreconf -i ; ./configure --prefix=/app ; make ; make DESTDIR=/ install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/sass/libsass/archive/3.4.7.tar.gz",
                    "sha256": "855c40528b897d06ae4d24606c2db3cd09bb38de5b46b28e835f9d4fd4d7ab95",
                    "dest": "./deps/libsass/"
                },
                {
                    "type": "archive",
                    "url": "https://github.com/sass/sassc/archive/3.4.2.tar.gz",
                    "sha256": "ad805f2d404d17cf2980c8079a7413cd58d2f2085120167997b85420a722e079",
                    "dest": "./deps/sassc/"
                }
            ]
        },
        {
            "name": "imagemagick",
            "config-opts": [
                "--enable-static=no",
                "--disable-docs",
                "--disable-deprecated",
                "--without-autotrace",
                "--without-bzlib",
                "--without-djvu",
                "--without-dps",
                "--without-fftw",
                "--without-fontconfig",
                "--without-fpx",
                "--without-freetype",
                "--without-gvc",
                "--without-jbig",
                "--without-jpeg",
                "--without-lcms",
                "--without-lzma",
                "--without-magick-plus-plus",
                "--without-openexr",
                "--without-openjp2",
                "--without-pango",
                "--without-raqm",
                "--without-tiff",
                "--without-webp",
                "--without-wmf",
                "--without-x",
                "--without-xml",
                "--without-zlib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.imagemagick.org/download/releases/ImageMagick-7.0.8-8.tar.xz",
                    "sha256": "148b9f3f9c8ab98985555aa97f89dfc17bda9a5bc00674d62562057e84e3d03f"
                }
            ]
        },
        {
            "name": "oomox",
            "buildsystem": "simple",
            "build-commands": [
                "make DESTDIR=/ PREFIX=/app APPDIR=/app/opt/oomox DISABLE_PLUGIN_SPOTIFY=1 install",
                "python3 -O -m compileall /app/opt/oomox/oomox_gui",
                "mkdir -p /app/usr/share/",
                "ln -s /app/share/applications /app/usr/share/applications",
                "ln -s /app/share/appdata /app/usr/share/appdata",
                "ln -s /app/share/icons /app/usr/share/icons"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/themix-project/oomox.git",
                    "tag": "1.8.0.1"
                }
            ]
        }
    ]
}
